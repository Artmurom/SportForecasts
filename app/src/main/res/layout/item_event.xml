<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/spacing_small"
    android:layout_marginRight="@dimen/spacing_small"
    android:layout_marginTop="@dimen/spacing_small"
    app:cardCornerRadius="@dimen/spacing_tiny"
    app:contentPadding="@dimen/spacing_tiny">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            style="@style/MyTextViewList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            tools:text="«Жирона» – «Леганес»: как закончится игра?" />

        <TextView
            android:id="@+id/tvCoefficient"
            style="@style/MyTextViewList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="1.98 Коэффициент" />

        <TextView
            android:id="@+id/tvTime"
            style="@style/MyTextViewList"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            tools:text="Время: Завтра в 23:00 МСК" />

        <TextView
            android:id="@+id/tvPlace"
            style="@style/MyTextViewList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Турнир: Испания. Примера" />

        <TextView
            android:id="@+id/tvPreview"
            style="@style/MyTextViewList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="В стартовом матче 24-го тура испанской Примеры«Жирона» сыграет с «Леганесом». В первом круге соперники сыграли вничью 0:0. Будет ли определен победитель в этой встрече? Предлагаем наш прогноз. " />
    </LinearLayout>


</android.support.v7.widget.CardView>